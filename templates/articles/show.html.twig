{% extends 'base.html.twig' %}

{% block title %}{{ article.nom }}{% endblock %}

{% block body %}
<div class="container mt-4">
    <div class="card">
        <div class="card-header">
            <h1 class="card-title">{{ article.nom }}</h1>
        </div>
        <div class="card-body">
            <p class="card-text"><strong>Prix :</strong> {{ article.prix }} €</p>
            <p class="card-text"><strong>ID :</strong> {{ article.id }}</p>
        </div>
        <div class="card-footer">
            <a href="{{ path('article_list') }}" class="btn btn-secondary">← Retour à la liste</a>
        </div>
    </div>
</div>
{% endblock %}